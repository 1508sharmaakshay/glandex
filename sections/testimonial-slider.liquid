{% if section.settings.divider %}<div class="section--divider">{% endif %}
	<div class="custom_testimonial_slider">
    <div class="page-width text-{{ section.settings.align_text }}" data-section-id="{{ section.id }}"
        data-section-type="testimonials">
        {% if section.settings.title != blank %}
        <div class="section-header">
            <h2>{{ section.settings.title | escape }}</h2>
        </div>
        {% endif %}

        {% if section.blocks.size > 0 %}
        <div class="testimonials-wrapper">
            <div class="testimonials-sliderNew" id="Testimonials1-{{ section.id }}">
                {% for block in section.blocks %}
                <div class="testimonials-slide--{{ block.id }}" data-aos="row-of-{{ section.blocks.size }}"
                    {{ block.shopify_attributes }}>
                    <div class="testimonials-slider__item">
                      <div class="testimonials-slider__item_inner">
                        <div class="testimonial_left">
                            {% if block.settings.title != blank %}
                            <div class="section-header">
                                <h3 class="heading3">{{ block.settings.title | escape }}</h3>
                            </div>
                            {% endif %}
                            <blockquote class="testimonials-slider__text">
                                {% if block.settings.testimonial != blank %}
                                    <div class="rte-setting text-spacing">{{ block.settings.testimonial }}</div>
                                {% endif %}
                                {% if block.settings.author != blank %}
                                <strong>{{ block.settings.author | escape }}</strong>
                                {% endif %}
                                {% if block.settings.place != blank %}
                                <span>{{ block.settings.place | escape }}</span>
                                {% endif %}
                            </blockquote>
                        </div>
                        <div class="testimonial_right">
                          	{% if block.settings.title != blank %}
                            <div class="section-header mobile_only">
                                <h3 class="heading3">{{ block.settings.title | escape }}</h3>
                            </div>
                            {% endif %}
                            {% if block.settings.image != blank %}
                            <div
                                class="image-wrap text-spacing testimonail-image{% if section.settings.round_images %} testimonail-image--round{% endif %}">
                                {%- assign img_url = block.settings.image | img_url: 'original' -%}
                                <img src="{{ img_url }}"
                                    data-widths="[180, 360, 540, 720, 900, 1080]"
                                    data-aspectratio="{{ block.settings.image.aspect_ratio }}" data-sizes="auto"
                                    alt="{{ block.settings.image.alt }}">
                                <noscript>
                                    <img src="{{ block.settings.image | img_url: '400x' }}"
                                        alt="{{ block.settings.image.alt }}">
                                </noscript>
                            </div>
                            {% endif %}
                        </div>
                      </div>    
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
    {% if section.settings.divider %}</div>{% endif %}


{% schema %}
{
	"name": "Testimonials Slider",
	"class": "index-section testimonial-section",
	"max_blocks": 9,
	"settings": [{
			"type": "text",
			"id": "title",
			"label": "Heading",
			"default": "Testimonials"
		},
		{
			"type": "select",
			"id": "align_text",
			"label": "Text alignment",
			"default": "left",
			"options": [{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "center",
					"label": "Centered"
				}
			]
		},
		{
			"type": "checkbox",
			"id": "divider",
			"label": "Show section divider",
			"default": false
		}
	],
	"blocks": [{
		"type": "testimonial",
		"name": "Testimonial",
		"settings": [{
				"type": "text",
				"id": "title",
				"label": "Heading"
			},
			{
				"type": "richtext",
				"id": "testimonial",
				"label": "Text",
				"default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
			},
			{
				"type": "text",
				"id": "author",
				"label": "Author",
				"default": "Author's name"
			},
			{
				"type": "text",
				"id": "place",
				"label": "Place Name"
			},
			{
				"type": "image_picker",
				"id": "image",
				"label": "Author's image"
			}

		]
	}],
	"presets": [{
		"name": "Testimonials Slider",
		"category": "Text",
		"blocks": [{
				"type": "testimonial"
			},
			{
				"type": "testimonial"
			},
			{
				"type": "testimonial"
			}
		]
	}]
}
{% endschema %}