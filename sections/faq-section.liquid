<div class="faq_section_main faq_section_main-{{ section.id }}">
    <div class="faq_section_inner">
        <div class="page-width">
            <div class="inner_content">
                {% assign faq_blocks = section.blocks | where: 'type', 'faq_selection' %}
                {% if section.settings.heading != blank or section.settings.content != blank or faq_blocks.size > 0 %}
                <div class="left_content">
                    <div class="quick_info">
                        {% if section.settings.heading != blank %}
                        <h3 class="heading">{{ section.settings.heading }}</h3>
                        {% endif %}
                      	{% if section.settings.sub_heading != blank %}
                        <h6 class="sub_heading mobile_only">{{ section.settings.sub_heading }}</h6>
                        {% endif %}
                        {% if section.settings.content != blank %}
                        <p class="content">{{ section.settings.content }}</h3>
                            {% endif %}
                    </div>
                    {% if faq_blocks.size > 0 %}
                    <div class="faq_list">
                        {% for block in faq_blocks %}
                        {% if block.settings.faq_icon != blank or block.settings.question != blank or block.settings.answer != blank %}
                        <div class="faq_item">
                            {% if block.settings.faq_icon != blank %}
                            <div class="faq_icon">
                                {{ block.settings.faq_icon }}
                            </div>
                            {% endif %}
                            {% if block.settings.question != blank or block.settings.answer != blank %}
                            <diV class="faq_content">
                                {% if block.settings.question != blank %}
                                <div class="faq_question">
                                    {{ block.settings.question }}
                                </div>
                                {% endif %}
                                {% if block.settings.answer != blank %}
                                <div class="faq_answer">
                                    {{ block.settings.answer }}
                                </div>
                                {% endif %}
                            </diV>
                            {% endif %}
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
                {% endif %}
                {% assign natural_blocks = section.blocks | where: 'type', 'natural_items' %}
                {% if section.settings.product_image != blank or section.settings.product_tagline != blank or natural_blocks.size > 0 %}
                <div class="right_content">
                    {% if section.settings.product_image != blank %}
                    <div class="product_image">
                        <img src="{{ section.settings.product_image | img_url: 'original' }}" alt="product_image" />
                    </div>
                    {% endif %}
                    {% if section.settings.product_tagline != blank %}
                    <div class="product_tagline">
                        {{ section.settings.product_tagline }}
                    </div>
                    {% endif %}
                    {% if natural_blocks.size > 0 %}
                    <div class="natural_slider">
                        {% for block in natural_blocks %}
                        {% if block.settings.natural_image != blank or block.settings.name != blank or block.settings.info != blank %}
                        <div class="natural_slider_item">
                            <div class="natural_slider_item_inner">
                                <div class="image">
                                    <img src="{{ block.settings.natural_image | img_url: 'original' }}"
                                        alt="product_image" />
                                </div>
                                {% if block.settings.name != blank or block.settings.info != blank %}
                                <div class="info">
                                    {% if block.settings.name != blank %}
                                    <h4 class="info_heading">{{ block.settings.name }}</h4>
                                    {% endif %}
                                    {% if block.settings.info != blank %}
                                    <p class="info_content">{{ block.settings.info }}</p>
                                    {% endif %}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
	"name": "FAQ List",
	"class": "index-section faq_list_section",
	"settings": [{
		"type": "text",
		"id": "heading",
		"label": "FAQ Heading"
	}, {
		"type": "text",
		"id": "sub_heading",
		"label": "FAQ Sub Heading"
	}, {
		"type": "textarea",
		"id": "content",
		"label": "FAQ Brief"
	}, {
		"type": "image_picker",
		"id": "product_image",
		"label": "Product Image"
	}, {
		"type": "text",
		"id": "product_tagline",
		"label": "Product Tagline"
	}],
	"blocks": [{
		"type": "faq_selection",
		"name": "Add FAQ",
		"settings": [{
			"type": "html",
			"id": "faq_icon",
			"label": "Icon"
		}, {
			"type": "text",
			"id": "question",
			"label": "Question"
		}, {
			"type": "textarea",
			"id": "answer",
			"label": "Answer"
		}]
	}, {
		"type": "natural_items",
		"name": "Natural Items",
		"settings": [{
			"type": "image_picker",
			"id": "natural_image",
			"label": "Natural Image"
		}, {
			"type": "text",
			"id": "name",
			"label": "Name"
		}, {
			"type": "textarea",
			"id": "info",
			"label": "Infoormation"
		}]
	}],
	"presets": [{
		"name": "FAQ Section",
		"category": "Promotional"
	}]
}
{% endschema %}

